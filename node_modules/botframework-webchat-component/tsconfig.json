{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "lib",
    "emitDeclarationOnly": true,
    "lib": [
      "dom",
      "es2016"
    ],
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "skipLibCheck": true,
    "target": "es6",
    "types": [
      "node"
    ],
    "sourceMap": true
  },
  "exclude": [
    "src/**/*.spec.js",
    "src/**/*.spec.ts",
    "src/**/*.test.js",
    "src/**/*.test.ts",
    "src/__tests__/**/*.js",
    "src/__tests__/**/*.ts"
  ],
  "include": [
    "src/**/*"
  ]
}
